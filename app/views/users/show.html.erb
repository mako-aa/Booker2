<!-- sidebar -->
<div class="sidebar">
  <%= render 'shared/user', user: @user %>
  <%= render 'shared/new', book: @book %>
</div>




<!-- ユーザーの投稿一覧 -->

<% @books.each do |book| %>
  <div>
    
    <p>投稿ユーザー画像：<%= image_tag book.user.get_profile_image(100,100) %></p>
    <%= link_to book_path(book.id) do %>
      <p> <%= book.title%> </p>
    <% end %>
    <p><%= book.opinion%> </p>
    <p><%= book.user.name %></p>
  </div>
<% end %>