
<div class="col-md-5 offset-md-3 ">
  <h1 class="mt-3">User info</h1>
  <% if @user.errors.any? %>
    <div class="error-box">
      <h3><%= @user.errors.count %> errors prohibited this obj from being saved:</h3>
      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  
  
    <%= form_with model: @user do |f| %>
      <div class="form">
        <label>Name</label><br>
        <%= f.text_field :name, autofocus: true, id:"inputName", class:"form-control"%>
      </div>
      
      <div class="form">
        <label>Image</label><br>
        <%= f.file_field :profile_image, accept: "image/*" %><br>
      </div>
      
      <div class="form">
        <label>Introduction</label><br>
        <%= f.text_area :introduction,autofocus: true, class:"form-control"%>
      </div>
      
      <div class="mt-3">
        <%= f.submit "Update User", class:"btn btn-secondary" %>
      </div>
      
  <% end %>

</div>