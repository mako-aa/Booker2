<!-- sidebar -->
<div class="sidebar">
  <%= render 'shared/user', user: @user %>
  <%= render 'shared/new', book: @book %>
</div>


<div>
  <p><%= image_tag @user.get_profile_image(100,100) %></p>
  <p><%= @book.user.name %></p>
  
  <%= link_to book_path(@book.id) do %>
    <p><%= @book.title%></p>
  <% end %>
  <p><%= @book.opinion%></p>
  
  <% if @book.user == current_user %>
    <%= link_to "Destroy", book_path(@book), method: :delete %>
  <% end %>
</div>