<% if @book.errors.any? %>
  <div class="error-box">
    <h3><%= @book.errors.count %> errors prohibited this obj from being saved:</h3>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>


<!-- sidebar -->
<div class="col-md-3">
  <div class="sidebar">
    <%= render 'shared/user', user: @user %>
    <%= render 'shared/new', book: @book %>
  </div>
</div>


<!-- Books-->
<div class="col-md-8 offset-md-1">
  <h2>Books</h2>
  <table class="table">
    <tr>
      <th></th>
      <th class="nav-list">Title</th>
      <th class="nav-list">Opinion</th>
    </tr>
    <% @books.each do |book| %>
    <tr>
      <td>
        <%= link_to user_path(book.user) do %>
          <%= image_tag(book.user.get_profile_image(100,100), alt:"Profile Image") %>
        <% end %>
      </td>
      <td><%= link_to book.title, book_path(book) %></td>
      <td><%= book.body %></td>
      
      <td><%= render 'shared/favorite', book: book %></td>
      <td>コメント数: <%= book.book_comments.count %></td>
      
      </td>
    </tr>
    
    <% end %>
    
  </table>
</div>