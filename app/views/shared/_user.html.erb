<div>
  <h3>User info</h3>
  <%= image_tag user.get_profile_image(100,100) %>
  
  <table class="table">
    <tr>
      <th class="nav-list">name</th>
      <td><%= user.name %></td>
    </tr>
    <tr>
      <th class="nav-list">introduction</th>
      <td><%= user.introduction %></td>
    </tr>
  </table>
  
  <div class= "mt-4">
    <% if user == current_user %>
      <%= link_to edit_user_path(user), title: "",class: "btn btn-outline-secondary btn-lg d-flex justify-content-center align-items-center" do %>
        <i class="fa-solid fa-user-gear"></i>
      <% end %>
    <% else %>
      <!--他人の編集ページへのリンク-->
      <%= link_to edit_user_path(user), title: "" ,class: "btn btn-outline-secondary btn-lg d-flex justify-content-center align-items-center" do %>
        <i class="fa-solid fa-user-gear"></i>
      <% end %>
    <% end %>
  </div>
  
</div>