<div>
  <h2 class="mt-3">New book</h2>
  <%= form_with model: book do |f| %>
    <div class="mt-3">
      <label>Title</label><br>
      <%= f.text_field :title %>
    </div>
    
    <div class="mt-3">
      <label>Opinion</label><br>
      <%= f.text_area :opinion %>
    </div>
     
    <div class="mt-3">
      <%= f.submit 'Create Book', class: 'btn btn-success' %>
    </div>
    
  <% end %>
</div>